<%= render 'menu_params' %>

<h1>Listing permissions</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @permissions.each do |permission| %>
  <tr>
    <td><%= permission.name %></td>
    <td><%= link_to 'Show', [:admin, permission] %></td>
    <td><%= link_to 'Edit', edit_admin_permission_path(permission) %></td>
    <td><%= link_to 'Destroy', [:admin, permission], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

