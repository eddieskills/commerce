<!DOCTYPE html>
<html>
<head>
  <title>Store</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to 'E-commerce', root_url, :class => "brand" %>
          <div class="nav-collapse">
            <ul class="nav">
              <li class="active"><%= link_to 'Home', root_url %></li>
              <li><%= link_to 'Panier : ', current_cart %> <%= cart_status %> </li>
            </ul>

            <p>
              <% if !current_user.nil? %>
                Votre e-mail : <%= current_user.email %> | 
                <%= link_to 'DÃ©connexion', destroy_user_session_url, method: :delete %>
              <% else %>
              <%= link_to 'Connexion', new_user_session_url %> | 
              <%= link_to 'Inscription', new_user_registration_url %>
              <% end %>
            </p>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container" id="main">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>">
            <%= value %>
          </div>
        <% end %>

      	<%= yield %>

    </div>

</body>
</html>
