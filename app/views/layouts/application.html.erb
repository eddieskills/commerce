<!DOCTYPE html>
<html>
<head>
  <title>Back Office</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to 'E-commerce', root_url, :class => "brand" %>
          <div class="nav-collapse">
            <ul class="nav">
              <li><%= link_to 'Home', root_url %></li>
              <li class="active"><%= link_to 'Back Office', "/products" %></li>
            </ul>

            <p>
              <% if !current_user.nil? %>
                Votre e-mail : <%= current_user.email %> | 
                <%= link_to 'DÃ©connexion', destroy_user_session_url, method: :delete %>
              <% else %>
              <%= link_to 'Connexion', new_user_session_url %> | 
              <%= link_to 'Inscription', new_user_registration_url %>
              <% end %>
            </p>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="">
      <div class="span3">
        <div class="well sidebar-nav">
        <ul class="nav nav-list">
          <li class="nav-header">Menu</li>
          <li>
            <%= link_to admin_products_url do %>
            <i class="icon-th-large"></i>Products
            <% end %>

            <%= link_to admin_articles_url do %>
            <i class="icon-file"></i>Articles
            <% end %>

            <%= link_to admin_categories_url do %>
            <i class="icon-folder-open"></i>Categories
            <% end %>

            <%= link_to admin_orders_url do %>
            <i class="icon-shopping-cart"></i>Orders
            <% end %>

            <%= link_to admin_users_url do %>
            <i class="icon-user"></i>Users
            <% end %>

            <%= link_to admin_roles_url do %>
            <i class="icon-cog"></i>Roles
            <% end %>

          </li>
        </ul>
        </div>
      </div>

      <div class="span9">
      	
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>">
            <%= value %>
          </div>
        <% end %>
        
        <%= yield %>

      </div>
    </div>

</body>
</html>
